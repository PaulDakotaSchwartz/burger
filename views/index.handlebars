<h1>BurgerTime!</h1>


<main>

  <div class="container">
    
    <div class="row">
      
      <div class="col s6" id="victims">
        <h2> Next Victim! </h2>
         {{#each burgers}}
          {{#unless this.devoured}}
            <div class="burgerVictims">
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class="burgerAvailable"> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
         {{/each}}
      </div>

      <div class="col s6" id="devoured">
        <h2> Devoured! </h2>
         {{#each burgers}}
          {{#if this.devoured}}
            <div class="burgerEaten">
              <div class="eatenBurger">
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
         {{/each}}
      </div>

    </div>

  </div>

</main>

<h1>Add a burger.</h1>

  <div class="row">
      
      <div class="col s12">
        <form action="/burgers" method="POST">
          <input type="text" id="name" name="burger_name" placeholder="New Burger">
          <button type="submit" class="addBurgerButton">Add the burger.</button>
        </form>
      </div>

  </div>
